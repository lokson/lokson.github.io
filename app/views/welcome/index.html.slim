.container-fluid.skills-container
  .container
    .row
      .col-sm-6
        section
          h1 Skills
          | show: 
          select ng-model="c.skill_type" ng-options="e for e in ['important technologies', 'all technologies']"
          br
          | ordered by: 
          select ng-model="c.skill_sort_by" ng-options="e for e in ['experience', 'last used']"
          div ng-if="c.skill_type=='all technologies'"
            | search: 
            input name="query" ng-model="c.query" ng-change="c.draw_projects_chart()"

          / div ng-if="c.skill_type=='all technologies'"
          /   br
          /   button ng-click="c.skill_type='important technologies'" show only important
          / br
          / br
          br
          br
          ul.skills.list-unstyled.bar-chart
            li ng-repeat="e in c.skills()" style="margin-bottom:0.2em"
              .pull-left style="width:200px"
                / div style="position:absolute"
                /   | {{e.human_time}}
                div.bar style="width:{{200*e.percent()}}px; float:right"
                  | &nbsp;
              span.title
                | {{e.name}}
              br
              .pull-left style="width:200px"
                span.pull-right.subtitle.skill-time
                  | {{e.human_time}}
              span.subtitle.ago
                |  {{e.human_ago}}
            / br
            / .text-center ng-if="c.skill_type!='all technologies'"
            /   br
            /   .small
            /     | and {{c.hidden_skills_count}} smaller technologies hidden
            /   button ng-click="c.skill_type='all technologies'" show all
            / .text-center ng-if="c.skill_type=='all technologies'"
            /   button ng-click="c.skill_type='important technologies'" show only important

      .col-sm-6
        section
          h1 Projects
          / div ng-if="c.project_time=='all years'"
          /   button ng-click="c.project_time='last 3 years'; c.recalculate()" show only last 3 years
          /   br
            / br
          | from:
          select ng-model="c.project_time" ng-options="e for e in ['last 3 years', 'all years']" ng-change="c.recalculate()"
          br
          br
          / svg.projects_chart width=800 height=50
          ul.projects.list-unstyled
            li ng-repeat="e in c.projects()" ng-mousemove="c.move_project_tooltip($event, $index)" ng-mouseover="c.project_hover($index)" ng-mouseleave="c.project_hover()"
              small.date
                | {{e.start.format('YYYY.MM')}} - {{e.end.format('YYYY.MM')}} ({{e.human_time}})
                br
              strong
                | {{e.company}}: {{e.name}} 
              a href="http://{{e.link}}" ng-if="e.link" {{e.link}}
              br
              | {{e.role}}
              br
              br
              .hover ng-class="'hover-{{$index}}'"
                div
                  span
                    | {{e.start.format('YYYY.MM')}} - {{e.end.format('YYYY.MM')}} ({{e.human_time}})
                br
                span.title
                  | {{e.company}}: {{e.name}}
                br
                a href="{{e.link}}" ng-if="e.link" {{e.link}}
                p
                  | {{e.description}}
                strong
                  | {{e.role}}
                span ng-if='e.software_house'
                  br
                  small
                    | at 
                  strong
                    | {{e.software_house}}
                span ng-repeat="partner in e.team"
                  br
                  | + {{partner}}
                br
                br
                small.skill-name ng-repeat="skill in e.skills"
                  | {{skill.name}}, 

          / .text-center ng-if="c.project_time!='all years'"
          /   br
          /   br
          /   .small
          /     | and {{c.hidden_projects_count}} older projects hidden
          /   button ng-click="c.project_time='all years'; c.recalculate()" show all
          / .text-center ng-if="c.project_time=='all years'"
          /   button ng-click="c.project_time='last 3 years'; c.recalculate()" show only last 3 years

    section.footer
      .row.text-center
        p
          = image_tag 'footer_small_2.png'
