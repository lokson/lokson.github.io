//
// general
//

body
  padding-top: 1em
  font-family: Lato
  font-size: 14pt
  color: black
  // background: radial-gradient(circle at 90% 46%, hsl(224, 48%, 65%) 1%, #6968c0 174%)
  background:
    radial-gradient(circle at 10% 26%, hsla(124, 0%, 60%, 100%) 1%, hsla(0, 0%, 30%, 100%) 300%)
// hsl(204,38%,92%)
// hsl(224, 48%, 65%)
// #6968c0

.strip
  width: 100%
  box-shadow: 0 0 5vmin 2vmin hsl(0,0,80%)

h1:first-letter
  text-transform: capitalize

select
  background: transparent
  border: none
  border-bottom: 1px solid hsla(0,0,0%,0.8)

mask rect,
mask circle
  opacity: 1

mask .stroke
  stroke: black
  stroke-width: 3

circle, rect, path, .bar
  background: hsl(228,4%,67%)
  fill: hsl(228,4%,65%)
  transition: all .4s ease;

.active
  circle, rect, path, .bar
    background: hsl(228,4%,67%)
    fill: hsl(228,4%,84%)


.title
  opacity: .8
  cursor: default
  transition: color .4s ease;

.subtitle
  stroke: white
  stroke-width: 0
  paint-order: stroke
  font-size: 59%
  opacity: .3
  cursor: default
  transition: color .4s ease;

.active .title,
.active .subtitle
  color: white
  opacity: .9

.domain
  fill: none


//
// specific
//

.vennDiagram
  font-size: 70%

.vennDiagram text
  alignment-baseline: middle

.important-skills .col-xs-6
  padding: 0
  margin: 0

.important-skills .bar
  margin-top: 0.25em
  height: 1em

.important-skills .ago
  position: relative
  top: -0.25em
